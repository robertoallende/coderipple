{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl"
      ],
      "Resource": [
        "arn:aws:s3:::coderipple-drawer/repos/*/workingcopy/*",
        "arn:aws:s3:::coderipple-drawer/repos/*/repohistory/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::coderipple-drawer",
      "Condition": {
        "StringLike": {
          "s3:prefix": "repos/*"
        }
      }
    }
  ]
}
